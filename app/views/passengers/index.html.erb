<h2> Passengers!</h2>

<div class="toggle">
  <%= paginate @passengers %>
</div>

<div class="passenger_title">
  <ul>
    <li>ID</li>
    <li>NAME</li>
  </ul>
</div>


<ul class="passenger_list">
  <% @passengers.each do |passenger| %>
  <li>
    <%= link_to(passenger.id, passenger_path(passenger)) %>

    <%= link_to(passenger.name, passenger_path(passenger)) %>
  </li>
  <% end %>
</ul>
