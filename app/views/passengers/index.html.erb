<h2> Passengers!</h2>

<div class="toggle">
  <%= paginate @passengers %>
</div>

<div class="passenger_title">
  <ul>
    <li>ID</li>
    <li>NAME</li>
    <li>EDIT</li>
  </ul>
</div>

<section class="passenger_list">
  <ul>
    <% @passengers.each do |passenger| %>
    <li><%= link_to(passenger.id, passenger_path(passenger)) %></li>
    <li><%= link_to(passenger.name, passenger_path(passenger)) %></li>
    <li>
      <button>
        <%= link_to( 'Edit Passenger', edit_passenger_path(passenger)) %>
      </button>
      <button>
        <%= link_to 'Delete', passenger_path(passenger),
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
      </button>
    </li>
    <% end %>
  </ul>
</section>
