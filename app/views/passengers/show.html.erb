<strong>Passenger Info:</strong>
<section>
  Passenger ID:
  <%= @passenger[:id] %><br>

  Name:
  <%= @passenger[:name] %><br>

  Number:
  <%= @passenger[:phone_num]%><br>
</section><br>
<section>
  Trips Taken:
  <% @passenger.trips.each do |trip| %>
  <li>
    <%= link_to("Trip: #{trip.id}", trip_path(trip)) %>
  </li>
</section><br>
<% end %>
<section>
  Total Spent:
 $<%= @passenger.total_spent %>
</section>

<button>
  <%= link_to( 'Edit Passenger', edit_passenger_path(@passenger)) %>
</button>

<button>
  <%= link_to 'Delete', passenger_path(@passenger),
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
</button>
