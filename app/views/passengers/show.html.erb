<h2>Passenger Info:</h2>

<section>
  Passenger ID:
  <%= @passenger[:id] %><br>

  Name:
  <%= @passenger[:name] %><br>
  
  Number:
  <%= @passenger[:phone_num]%><br>
</section><br>

<section class="pass_taken_trips">
  Trips Taken:
  <% @passenger.trips.each do |trip| %>
  <li>
    <%= link_to("Trip: #{trip.id}", trip_path(trip)) %>

    <% if trip.rating == nil %>
    <button>
      <%= link_to( 'Rate Trip!', edit_trip_path(@passenger)) %>
    </button>
    <% end %>
  </li>
  <% end %>
</section><br>

<section>
  Total Spent:
  $<%= @passenger.total_spent.round(2) %>
</section>

<button>
  <%= link_to( 'Edit Passenger', edit_passenger_path(@passenger)) %>
</button>

<button>
  <%= link_to 'Delete', passenger_path(@passenger),
  method: :delete,
  data: { confirm: 'Are you sure?' } %>
</button>

<button>
  <%= link_to('New Trip', new_passenger_trip_path(@passenger)) %>
</button>
