<h2>Driver Details</h2>
<p>Driver ID: <%= @driver.id %></p>
<p>Name: <%= @driver.name %></p>
<p>VIN: <%= @driver.vin %></p>

<button>
  <%= link_to "Edit this driver", edit_driver_path(@driver) %>
</button>

<button>
  <%= link_to('Delete this driver', driver_path(@driver.id), method: :delete, data:
  {confirm: 'Are you sure you want to delete this driver?'}) %>
</button>

<section class="summary">
  <p>Total Earnings: $ <%= @driver.total_earnings %></p>

  <p>Average Rating: <%= @driver.average_rating %></p>

  <h4>Trips:</h4>
  <section class="pass_title">
    <ul>
      <li>Trip ID</li>
      <li>Date</li>
      <li>Passenger</li>
      <li>Rating</li>
      <li>Cost</li>
      <li>(trip details)</li>
    </ul>
  </section>

  <ul class="pass_table">
    <% @driver.trips.each do |trip| %>
    <li><%= link_to trip.id, trip_path(trip) %></li>
    <li><%= trip.date %></li>
    <li><%= trip.passenger_id %></li>
    <li><%= trip.rating %></li>
    <li>$ <%= trip.trip_cost_dollars.round(2) %></li>
    <% end %>
  </ul>
</section>
