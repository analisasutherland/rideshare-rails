<h2>Driver Details</h2>
<p>Driver ID: <%= @driver.id %></p>
<p>Name: <%= @driver.name %></p>
<p>VIN: <%= @driver.vin %></p>

<button>
  <%= link_to "Edit this driver", edit_driver_path(@driver) %>
</button>

<button>
  <%= link_to('Delete this driver', driver_path(@driver.id), method: :delete, data:
  {confirm: 'Are you sure you want to delete this driver?'}) %>
</button>

<h4>Total Earnings:</h4>
<p>$ <%= @driver.total_earnings %></p>

<h4>Average Rating:</h4>
<p><%= @driver.average_rating %></p>

<h4>Trips:</h4>
<ul>
  <% @driver.trips.each do |trip| %>
  <li>
    Trip ID:
    <%= link_to trip.id, trip_path(trip) %>
    Date:
    <%= trip.date %>
    Passenger ID:
    <%= trip.passenger_id %>
    Rating:
    <%= trip.rating %>
    Cost: $
    <%= trip.cost %>
  </li>
  <% end %>
</ul>
