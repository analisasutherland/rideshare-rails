<% render partial: "layouts/error_messages", locals: {model: @trip } %>

<%= form_for @trip do |t| %>
  <%= t.label :id %>
  <%= t.text_field :id %>
  <%= t.label :passenger %>
  <%= t.text_field :passenger_id %>
  <%= t.label :driver %>
  <%= t.text_field :driver_id %>
  <%= t.label :rating %>
  <%= t.number_field :rating, in: 0..5 %>
  <%= t.label :cost %>
  <%= t.number_field :cost, readonly: true  %>
  <%= t.submit "Update" %>
<% end %>
