<% render partial: "layouts/error_messages", locals: {model: @trip } %>

<%= form_for @trip do |t| %>
<div>
  <%= t.label :date %>
  <%= t.date_field :date %>
</div>

<div>
  <% unless @trip.passenger_id %>
    <%= t.label :passenger %>
    <%= t.select :passenger_id, Passenger.all.map{ |pass| [pass.id, pass.name] } %>
  <% else %>
    <%= t.label :passenger %>
    <%= t.text_field :passenger_id, readonly: true %>
  <% end %>
</div>

<div>
  <%= t.label :driver %>
  <%= t.text_field :driver_id %>
</div>

<div>
  <%= t.label :rating %>
  <%= t.number_field :rating %>
</div>

<div>
  <%= t.label :cost %>
  <%= t.number_field :cost, readonly: true %>
</div>

<div>
  <%= t.submit "Start Trip!" %>
</div>

<% end %>
